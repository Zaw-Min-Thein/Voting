<body>
    <header>
        <h1>Adminastrator</h1>
    </header>
    <div class="container">
        <div class="add">
            <div>
                <a href="http://localhost:5000/add/category">New Category</a>
                <a href="http://localhost:5000/add/participant">New Participant</a>
            </div>
        </div>

        <div class="categories">
            <% if(result) { %> 
            <% result.forEach(e => {%>
            <div>
                <img src="<%= e.image %>" width=100 height=100>
                <a href="viewparticipants.html?cid=<%= e.cid %>"><%= e.name %></a>
                <button class="delete" value="<%= e.cid %>">DELETE</button>
            </div>
            <% })%>

        <% } %>

        </div>
    </div>
    <script>
        const buttons = document.querySelectorAll(".delete");


        buttons.forEach(btn => {
            let botton = btn;
            botton.addEventListener("click", (e) => {
                e.preventDefault();
                console.log(botton.value);
                fetch('http://localhost:5000/delete/category/' + botton.value, { method: 'POST' })
                .then(res => {
                    console.log(res);
                })
            })
        });

    </script>

</body>

</html>